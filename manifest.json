{
  "manifest_version": 3,
  "name": "Comment Tiers: YouTube Comment Analyzer",
  "version": "1.0.0",
  "description": "Analyzes YouTube comments using the Gemini API and categorizes them directly on the video page.",
  "permissions": ["storage", "activeTab", "notifications"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://m.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}