{
  "manifest_version": 3,
  "name": "YouTube Comment Forum Extension (React)",
  "version": "1.0",
  "description": "Analyzes and categorizes YouTube comments using the Gemini API and secure Google Sign-In.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Forum Analyzer"
  },
  "permissions": [
    "identity",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://generativelanguage.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.tsx"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "oauth2": {
    "client_id": "856809274315-tl4e4fbd4b59b0pumaliqx0lflqae4dtp.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/cloud-platform"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
